{
  "info": {
    "name": "Black Light API",
    "description": "API collection for Black Light - Black-owned Business Directory",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Businesses",
      "item": [
        {
          "name": "Get All Businesses",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/businesses",
              "host": ["{{baseUrl}}"],
              "path": ["businesses"]
            }
          }
        },
        {
          "name": "Get Businesses by Category",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/businesses?category=Restaurant",
              "host": ["{{baseUrl}}"],
              "path": ["businesses"],
              "query": [
                {
                  "key": "category",
                  "value": "Restaurant"
                }
              ]
            }
          }
        },
        {
          "name": "Search Businesses",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/businesses?search=coffee&city=Greensboro",
              "host": ["{{baseUrl}}"],
              "path": ["businesses"],
              "query": [
                {
                  "key": "search",
                  "value": "coffee"
                },
                {
                  "key": "city",
                  "value": "Greensboro"
                }
              ]
            }
          }
        },
        {
          "name": "Get Featured Businesses",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/businesses/featured?limit=3",
              "host": ["{{baseUrl}}"],
              "path": ["businesses", "featured"],
              "query": [
                {
                  "key": "limit",
                  "value": "3"
                }
              ]
            }
          }
        },
        {
          "name": "Get Business by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/businesses/1",
              "host": ["{{baseUrl}}"],
              "path": ["businesses", "1"]
            }
          }
        },
        {
          "name": "Create Business",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"New Business\",\n  \"category\": \"Restaurant\",\n  \"description\": \"A great place to eat\",\n  \"address\": \"123 Main St\",\n  \"city\": \"Greensboro\",\n  \"state\": \"NC\",\n  \"zip_code\": \"27401\",\n  \"phone\": \"(336) 555-0100\",\n  \"email\": \"info@newbusiness.com\",\n  \"latitude\": 36.0726,\n  \"longitude\": -79.7920\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/businesses",
              "host": ["{{baseUrl}}"],
              "path": ["businesses"]
            }
          }
        },
        {
          "name": "Update Business",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Business Name\",\n  \"description\": \"Updated description\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/businesses/1",
              "host": ["{{baseUrl}}"],
              "path": ["businesses", "1"]
            }
          }
        },
        {
          "name": "Delete Business",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/businesses/1",
              "host": ["{{baseUrl}}"],
              "path": ["businesses", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Reviews",
      "item": [
        {
          "name": "Get Reviews for Business",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/reviews/business/1",
              "host": ["{{baseUrl}}"],
              "path": ["reviews", "business", "1"]
            }
          }
        },
        {
          "name": "Create Review",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"business_id\": 1,\n  \"rating\": 5,\n  \"comment\": \"Great experience! Highly recommend.\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/reviews",
              "host": ["{{baseUrl}}"],
              "path": ["reviews"]
            }
          }
        },
        {
          "name": "Delete Review",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/reviews/1",
              "host": ["{{baseUrl}}"],
              "path": ["reviews", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Favorites",
      "item": [
        {
          "name": "Get User Favorites",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/favorites",
              "host": ["{{baseUrl}}"],
              "path": ["favorites"]
            }
          }
        },
        {
          "name": "Add Favorite",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"business_id\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/favorites",
              "host": ["{{baseUrl}}"],
              "path": ["favorites"]
            }
          }
        },
        {
          "name": "Remove Favorite",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/favorites/1",
              "host": ["{{baseUrl}}"],
              "path": ["favorites", "1"]
            }
          }
        }
      ]
    }
  ]
}
